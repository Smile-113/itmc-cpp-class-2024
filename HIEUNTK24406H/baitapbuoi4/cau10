#include <iostream>
using namespace std;
int main()
{
    int a;
    cout << "nhap bat ky 1 so tu 1 den 7 : ";
    cin >> a;
    switch(a)
    {
        case 1:
        cout << "sunday";
        break;

        case 2:
        cout << "monday";
        break;

        case 3:
        cout << "tuesday";
        break;

        case 4:
        cout << "wednesday";
        break;

        case 5:
        cout << "thursday";
        break;

        case 6:
        cout << "friday";
        break;

        case 7:
        cout << "saturday";
        break;
        
        default:
        cout << "ngay trong tuan phai tu so 1 den 7";
    }
    system("pause");
}